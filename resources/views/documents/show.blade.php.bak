                                                        if ($row["sub_paragraph"] !== null) {
                                                            $data[$row["part"]]["divisions"][$row["division"]]["sub_divisions"][$row["sub_division"]]["sections"][$row["section"]]["subsections"][$row["sub_section"]]["paragraphs"][$row["paragraph"]]["sub_paragraphs"][] = [
