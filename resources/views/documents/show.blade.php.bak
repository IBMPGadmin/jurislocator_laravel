                                            // Display subsection footnote if exists
                                            if (!empty($subsection["footnote"])) {
                                                echo "<p class='footnote' data-category-id='{$category_id}'><em>" . html_entity_decode($subsection["footnote"]) . "</em></p>";
                                            }
