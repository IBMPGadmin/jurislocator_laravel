                                                        $data[$row["part"]]["divisions"][$row["division"]]["sub_divisions"][$row["sub_division"]]["sections"][$row["section"]]["subsections"][$row["sub_section"]] = [
                                                            "title" => $row["title"],
                                                            "text_content" => $row["text_content"],
                                                            "paragraphs" => [],
                                                            "sub_paragraphs" => [],
                                                            "footnote" => $row["footnote"],
