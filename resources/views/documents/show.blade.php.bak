                                    if ($currentDivision != $divisionNumber) {
                                        echo "<h3>Division {$divisionNumber}</h3>";
                                        echo "<h3>" . makeLinksClickable($division["title"], $category_id) . "</h3>";
                                        $currentDivision = $divisionNumber;
