    $standaloneData = [];
    $currentTitle = null;

    while ($row = $stmt->fetch(PDO::FETCH_ASSOC)) {
        // Handle title-only entries (these act as headers)
        if (!empty($row["title"]) && empty($row["section"])) {
            $currentTitle = $row["title"];
            $standaloneData[$currentTitle] = [
